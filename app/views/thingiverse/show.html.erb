<div class="container">
  <div class="design-showpage-wrapper">
    <div class="row">
      <div class="col-xs-12">
        <div class="design-show-title-wrapper">
          <h2><%= @thing.name %></h2>
          <div class="designshow-description">
            <p><%= @thing.description %></p>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-6">
        <div class="design-show-design-details">
          <div class="designshow-photos">
              <%= render 'shared/thingiverse-slideshow-design-show' %>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-6 design-show-column-container">
          <div class="thingiverse-design-information">
            <h3>Thingiverse Stats</h3>
            <div>Likes: <%= @thing.like_count %></div>
            <div>Views: <%= @thing.view_count %></div>
            <div>Downloads: <%= @thing.download_count %></div>
          </div>
          <div class="designshow-button">
              <%= link_to "Add this design to PoP", designs_path, method: :post, class: "button" %>
          </div>
          <%= link_to "View this design on Thingiverse", @thing.public_url, target: "_blank" %>
      </div>
    </div>
  </div>
</div>

