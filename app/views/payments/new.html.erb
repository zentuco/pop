<div class="container">
  <div class="payment-card-container">
    <h2>Purchase of <%= @order.token_sku %> Tokens</h2>
    <div class="payment-card-line"><hr></div>
    <div class="payment-card-layout">
      <%= form_tag order_payments_path(@order) do %>
      <article>
        <div class="payment-card-amount">
          <label>
            Your total amount due is: <%= humanized_money_with_symbol(@order.amount) %>
          </label>
        </div>
      </article>
      <div class="payment-card-line"><hr></div>

      <div class="payment-card-actions">
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-name="Token"
        data-email="<%= current_user.email %>"
        data-description="Tokens: <%= @order.token_sku %>"
        data-amount="<%= @order.amount_cents %>"
        data-currency="<%= @order.amount.currency %>"></script>
        <% end %>
      </div>
      <span></span>
      <div class="payment-card-cancel-action">
        <%= link_to "Cancel", :back, class:"button-red" %>
      </div>
    </div>
  </div>
</div>

