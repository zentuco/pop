<div class="card-wrapper">
  <div class="card-container">

      <div class="card-header">
        <span class="card-avatar">
          <!-- design or request users avatar -->
            <%= image_tag "thingiverse-avatar.png", class: "avatar small" %>
        </span>
        <span class="card-name">
          <!-- user-name -->
          thingiverse
        </span>
        <span class="card-category">
          <!-- design/request category -->
          <!-- need to figure out how to grab category from thingiverse -->

        </span>
      </div>
    <div class="card-body">
        <%= link_to thingiverse_design_path(id: thing.id), class: "card-details-header" do %>
        <div>
          <!-- design image -->
          <%= image_tag thing.thumbnail , class: "card-image" %>

        </div>
        <div class="card-details">
          <div>
            <div class="card-title">
              <!-- Title of Design or Request (new or change) -->
              <h3><%= thing.name %></h3>
            </div>
            <div class="card-description">
              <!-- small description of design or request || We can use truncate method in ruby to put [...] after description -->
              <div class="card-description-text">
                <%= thing.description %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="card-footer"> <!-- only if request? -->

            <div class="card-footer-alt">
              <%= link_to "Open a request to improve this design", thingiverse_design_path(id: thing.id) %>
            </div>

        </div>
      </div>
    </div>
    <hr>
  </div>
</div>

