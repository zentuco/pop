<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <div class="navbar-logo navbar-logo-white">
      <%= image_tag "logo.png" %>
      <span>The Pool of Printables</span>
    </div>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "Request New Design", new_design_path, class:"navbar-wagon-item navbar-wagon-link-white" %>
    <%= link_to "Become a Designer", become_designer_path, class:"navbar-wagon-item navbar-wagon-link-white" %>
    <% if !user_signed_in? %>
      <%= link_to "Sign Up", new_user_registration_path, class:"navbar-wagon-item navbar-wagon-link-white" %>
      <%= link_to "Log In", new_user_session_path, class:"navbar-wagon-item navbar-wagon-link-white" %>
    <% end %>

    <!-- Profile picture with dropdown list -->
    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
           <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Dashboard", dashboard_path %></li>
            <li><%= link_to "Profile", profile_path %></li>
            <li><%= link_to "Browse Designs", designs_path %></li>
            <li><%= link_to "Request New Design", new_design_path %></li>
            <li><%= link_to "Top Up Wallet", topup_path %></li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <% if user_signed_in? %>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Dashboard", dashboard_path %></li>
          <li><%= link_to "Profile", profile_path %></li>
          <li><%= link_to "Browse Designs", designs_path %></li>
          <li><%= link_to "Request New Design", new_design_path %></li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <%= link_to "Sign Up", new_user_registration_path, class:"navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Log In", new_user_session_path, class:"navbar-wagon-item navbar-wagon-link" %>
          <li><%= link_to "Browse Designs", designs_path %></li>
          <li><%= link_to "Request New Design", new_design_path %></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
