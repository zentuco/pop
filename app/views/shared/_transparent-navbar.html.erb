<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to '/', class: "navbar-wagon-brand" do %>
    <div class="navbar-logo">
      <%= image_tag("logo.png") %>
      Pool of Printables
    </div>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "Add eQuipment", new_item_path, class:"navbar-wagon-item navbar-wagon-link-white" %>
    <% if !user_signed_in? %>
      <%= link_to "Sign Up", new_user_registration_path, class:"navbar-wagon-item navbar-wagon-link-white" %>
      <%= link_to "Log In", new_user_session_path, class:"navbar-wagon-item navbar-wagon-link-white" %>
    <% end %>

    <!-- Profile picture with dropdown list -->
    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
           <%= image_tag "http://kitt.lewagon.com/placeholder/users/vananreed", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Profile", dashboard_path %></li>
            <li><%= link_to "eQuip Up!", items_path %></li>
            <li><%= link_to "Add eQuipment", new_item_path %></li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <% if user_signed_in? %>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <%= image_tag "http://kitt.lewagon.com/placeholder/users/vananreed", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Profile", dashboard_path %></li>
          <li><%= link_to "eQuip Up!", items_path %></li>
          <li><%= link_to "Add eQuipment", new_item_path %></li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Add eQuipment", new_item_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Log In", new_user_session_path %></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
