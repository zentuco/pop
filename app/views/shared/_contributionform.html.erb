  <%= simple_form_for [request, contribution], url: contributions_path, method: :post do |f| %>
    <%= f.input_field :request, as: :hidden, value: request.id %>
    <%= f.input :tokens, required: true, input_html: { type: :text, id: "ex6", data: { slider_min: '0', slider_step: '1', slider_max: current_user.wallet.tokens, slider_value: "0" } } %>
    <%= f.submit :submit, class: "button", value: "Accept" %>
    <% if controller_name == "requests"%>
      <%= link_to "cancel", :back, class: "button-red" %>
    <% else %>
      <button type="button" class="button-red" data-dismiss="modal">Cancel</button>
    <% end %>
  <% end %>
