<div class="container-fluid marginized">
  <div class="row">
    <div class="col-md-2 hidden-sm index-grid-padding">
      <div class="index-categories">
        <% Category.all.each do |category| %>
          <ul class="category-list-index">
            <li>
              <%= link_to category.name.capitalize %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="col-sm-12 col-md-8 index-grid-padding">
      <div class="cards-container">
        <div class="index-searchbar">
          <%= render "shared/searchbar" %>
        </div>
        <% @designs.each do |design|  %>
          <%= render 'shared/card', design: design %>
        <% end %>
      </div>
    </div>
    <div class="col-md-2 hidden-sm index-grid-padding">
      <div class="index-faqs">
        dsjgfbvf
      </div>
    </div>
  </div>
</div>

<%= render 'shared/modal' %>
