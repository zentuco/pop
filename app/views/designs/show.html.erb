<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <div class="design-details">
        <h1><%= @design.name %></h1>
        <% if !@design.attachments.empty? %>
          <%= render 'shared/carousel_design_show'  %>
        <% else %>
          <img src="https://szempatiaoptika.hu/UserFiles/Image/no-image-icon.jpg" alt="no_upload" style: width 100% >
        <% end %>
        <p><%= @design.description %></p>
        <p><i class="fas fa-heart"></i> <%= @design.likes %></p>
      </div>
      <%= link_to "Request Improvement on this Design", new_design_request_path(@design), class: "button" %>
    </div>
    <div class="col-sm-12 col-md-6">
      <div class="requests">
        <% @design.requests.each do |request| %>
          <div class="request">
            <div class="request-kind"><%= request.kind %></div>
            <div class="request-description"><%= request.description %></div>
            <div class="contributions">
              <span><%= request.contributions.size %> contributions</span>
              <div class="pool">Pool: <i class="fas fa-coins"></i> <%= request.total_tokens %></div>
            </div>
            <%= render 'shared/contributionform', request:request, contribution:@contribution %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
