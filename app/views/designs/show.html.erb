<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <div class="design-details">
        <h1><%= @design.name %></h1>
        <% @design.attachments.each do |file| %>
        <%= image_tag file.file %>
        <% end %>
        <p><%= @design.description %></p>
        <p><i class="fas fa-heart"></i> <%= @design.likes %></p>
      </div>
    </div>
    <div class="col-sm-12 col-md-6">
      <div class="requests">
        <div class="request">
          <% @design.requests.each do |request| %>
          <div><%= request.kind %></div>
          <p><%= request.description %></p>
          <div class="contributions">
            <span><%= request.contributions.size %> contributions<span>
            <div class="pool">Pool: <i class="fas fa-coins"></i> <%= request.total_tokens %></div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
